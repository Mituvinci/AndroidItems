                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/webappTextview"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:onClick="webApp"
                    android:text="WebApp"
                    android:textSize="20sp" />

                <LinearLayout
                    android:id="@+id/pushnotificationLinearlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/justshopushnotificationTextview"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Push Notification"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:id="@+id/innerlinearpushnotification"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#C6DEFC"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/firabseManifestTextview"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Firebase Manifest"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/pushActivityTextview"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Push Notification Activity"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/firebaseInstanceidTextview"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="FirebaseInstance ID Service"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/firebaseMessagingTextview"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Firebase Messaging Service"
                            android:textSize="20sp" />

                    </LinearLayout>
                </LinearLayout>


                <TextView
                    android:id="@+id/EndlessTextview"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:onClick="endlessRecycleview"
                    android:text="EndlessRecycleView"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/voicesearchTextview"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:onClick="voiceSearch"
                    android:text="Voice Search"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/retrofitTextview"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:onClick="retrofit"
                    android:text="Retrofit"
                    android:textSize="20sp" />

                <LinearLayout
                    android:id="@+id/gsonVollyTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/justshowvollyTextview"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Gson Volly"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:id="@+id/innerlinearVolly"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#C6DEFC"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/vollyActivityTextview"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Volly Activity"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/vollyTextview"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Volly"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/gsonrequestTextview"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Gson Request"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/getNetworkTextview"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="NetWork Request"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/requestCallbackTextview"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Interface Request Callback"
                            android:textSize="20sp" />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/jsonTextview"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:onClick="json"
                    android:text="JSon"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/glideTextview"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:onClick="glide"
                    android:text="Glide"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/toggleButtonTextview"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:onClick="toggleButton"
                    android:text="Toggle Button"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/facebooklofinTextview"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:onClick="facebookLogin"
                    android:text="FaceBook Login"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/googleloginTextview"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:onClick="googleLogin"
                    android:text="Google Login"
                    android:textSize="20sp" />


                <TextView
                    android:id="@+id/sharedpreferanceTextview"
                    android:layout_width="match_parent"
