                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/callTextview"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:onClick="call"
