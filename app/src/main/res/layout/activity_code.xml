<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#FFFFFF"
        android:elevation="40dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="#FFFFFF"
            android:gravity="center"
            android:text="Raw Code"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/notificationButton"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/text"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:onClick="notification"
                    android:text="Notification"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/searchButton"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:onClick="Search"
                    android:text="Serach"
                    android:textSize="20sp" />

                <LinearLayout
                    android:id="@+id/musicLinearlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/justshowmusictext"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Music"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:id="@+id/innerlinearMusic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#C6DEFC"
                        android:orientation="vertical"
                        android:visibility="gone">


                        <TextView
                            android:id="@+id/musiclistTextView"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Music List"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/SongListTextView"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="getting song from memory"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/medialPlayerTextview"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Music Player"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/recyclerAdapterTextview"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Recycler Adapter"
                            android:textSize="20sp" />

                    </LinearLayout>


                </LinearLayout>

                <TextView
                    android:id="@+id/splashButton"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:onClick="splash"
                    android:text="Splash"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/cameraTextview"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:onClick="camera"
                    android:text="Camera"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/connectivityTextview"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:onClick="connectivity"
                    android:text="Connectivity"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/serviceTextview"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:onClick="service"
                    android:text="Service"
                    android:textSize="20sp" />

                <LinearLayout
                    android:id="@+id/BroadcastLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/justshowBroadcastTextview"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Broad Cast"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:id="@+id/innerlinearBroadcast"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#C6DEFC"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/BroadcasManifestTextview"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Manifest"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/BroadcastActivityTextview"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="BroadCast Activity"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/BroadcastRecieverTextview"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="BroadCast Receiver"
                            android:textSize="20sp" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/GooglemapTextview"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:onClick="googleMap"
                    android:text="GoogleMap"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/sensorTextview"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:onClick="sensor"
                    android:text="Sensor"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/SecuritTextview"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:onClick="security"
                    android:text="Security"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/animationTextview"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:onClick="animation"
                    android:text="Animation"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/navigationTextview"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:onClick="navigation"
                    android:text="Navigation"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/ViewpagerTextview"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:onClick="viewpager"
